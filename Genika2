class Category(models.Model):
    name = models.CharField(max_length=200)
    desc = models.TextField()

    def __str__(self):
        return self.name
        
        
        
        
        category = models.ForeignKey('Category', blank=True, null=True, on_delete=models.CASCADE)
        
        


admin.site.register(Category)




